@model ProjectView.Models.ViewModel.StudentModel
@{
    ViewBag.Title = "学生主页";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .blo {
        text-align: left;
        width: 200px;
        height: 200px;
        background-color: #00ff90;
    }

    .blo1 {
        text-align: left;
        width: 200px;
        height: 200px;
        background-color: #ffd800;
    }

    .blo2 {
        text-align: left;
        width: 200px;
        height: 200px;
        background-color: #0094ff;
    }

    .blo3 {
        text-align: left;
        width: 200px;
        height: 200px;
        background-color: #ff006e;
    }

    a:link {
        color: #000000;
        text-decoration: none;
    }

    a:visited {
        color: #000000;
        text-decoration: none;
    }

    a:hover {
        color: #000000;
        text-decoration: none;
    }

    a:active {
        color: #000000;
        text-decoration: none;
    }

    .pdl {
        font-size: xx-large;
        margin: 10px 10px 10px 10px;
    }

    .zpdl {
        margin: 10px 10px 10px 10px;
    }

    .CImg {
        width: 50px;
        height: 50px;
        border: none;
        margin: 10px 10px 10px 10px;
    }
</style>
<table style="width: 100%;">
    <tr>
        <td style="text-align: right;" colspan="4">
            <img src="~/Content/Images/User_image.png" style="width: 18px; height: 18px;" />当前用户：@Model.StuName
            （ @Html.ActionLink("修改密码", "ChangPassword", "Student", new { stuno = Model.StuNo }, null) ）
        </td>
    </tr>
    <tr style="height: 300px;">
        <td style="width: 25%">
            <a href="~/ProjectReview/Review?stuno=@Model.StuNo">
                <div class="blo">
                    <p class="pdl">项目评审</p>
                    <p class="zpdl">项目评审是综合衡量学生学习水平的模块。</p>
                    <table style="width: 100%; height: 100px; text-align: right; vertical-align: bottom;">
                        <tr>
                            <td>
                                <img class="CImg" src="~/Content/Images/note1.png" />
                            </td>
                        </tr>
                    </table>

                </div>
            </a>
        </td>
        <td style="width: 25%" align="center">
            <a href="~/ProjectReview/StuQueryGrade?reviewstuno=@Model.StuNo">
                <div class="blo1">
                    <p class="pdl">成绩查询</p>
                    <p class="zpdl">成绩查询是综合查询本班级学生的全部项目的模块。</p>
                    <table style="width: 100%; height: 100px; text-align: right; vertical-align: bottom;">
                        <tr>
                            <td>
                                <img class="CImg" src="~/Content/Images/search.png" />
                            </td>
                        </tr>
                    </table>
                </div>
            </a>
        </td>
        <td style="width: 25%;" align="center">
            <a href="~/Remark/QueryRemark?stuno=@Model.StuNo">
                <div class="blo2">
                    <p class="pdl">评语查询</p>
                    <p class="zpdl">学生可以查询自己班级里全体学生的评语。</p>
                    <table style="width: 100%; height: 100px; text-align: right; vertical-align: bottom;">
                        <tr>
                            <td>
                                <img class="CImg" src="~/Content/Images/search.png" />
                            </td>
                        </tr>
                    </table>
                </div>
            </a>
        </td>
        <td style="width: 34%;" align="right">
            <a href="~/Student/Perfect?stuno=@Model.StuNo">
                <div class="blo3">
                    <p class="pdl">信息完善</p>
                    <p class="zpdl">学生在登录后，可以完善自己各类的信息。</p>
                    <table style="width: 100%; height: 100px; text-align: right; vertical-align: bottom;">
                        <tr>
                            <td>
                                <img class="CImg" src="~/Content/Images/edit.png" />
                            </td>
                        </tr>
                    </table>
                </div>
            </a>
        </td>

    </tr>
</table>
