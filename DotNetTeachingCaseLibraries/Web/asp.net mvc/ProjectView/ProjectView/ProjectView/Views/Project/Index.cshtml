@model IEnumerable<ProjectView.Models.ViewModel.ProjectModel>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>详细列表</h2>

<p>
    @Html.ActionLink("添加项目", "Create")
</p>
<br />
<table  width="100%" class="myListTable">
    <tr style="background-color:#cac2c2">
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Describe)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Describe)
        </td>
        <td style="width:100px;">
            @Html.ActionLink("修改", "Edit", new { id=item.ID }) |
            @Html.ActionLink("删除", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
<br />
@Html.ActionLink("首页", "MainPage", "Teacher")