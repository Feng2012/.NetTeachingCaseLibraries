@model IEnumerable<ProjectView.Models.ViewModel.TeacherUserModel>

@{
    ViewBag.Title = "教师用户信息";
}

<h2>教师用户信息列表</h2>

<p>
    @Html.ActionLink("添加", "Create")
</p>
<table width="100%" class="myListTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherName)
            </td>
            <td style="width:100px;">
                @Html.ActionLink("修改", "Edit", new { username = item.UserName }) |
               @Html.ActionLink("删除", "Delete", new { username = item.UserName })
            </td>
        </tr>
    }

</table>
<br />
@Html.ActionLink("首页", "MainPage", "Teacher")