@model ProjectView.Models.ViewModel.TeacherUserModel

@{
    ViewBag.Title = "修改教师用户信息";
}

<h2>修改教师用户信息</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>教师用户信息</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.TeacherName)
        <div>
            @Html.DropDownList("TeacherID")
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.UserName)
        </div>
        <div class="editor-field">
            @Model.UserName       
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>        

        <br />
        <p>
            <input type="submit" value="保存" class="SubmitBut" />
        </p>
        @Html.ValidationMessage("Error")
    </fieldset>
}

<div>
    @Html.ActionLink("详细列表", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
