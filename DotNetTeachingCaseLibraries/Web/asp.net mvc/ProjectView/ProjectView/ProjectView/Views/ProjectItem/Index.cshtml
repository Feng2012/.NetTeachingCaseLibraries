@model IEnumerable<ProjectView.Models.ViewModel.ProjectItemModel>

@{
    ViewBag.Title = "详细列表";
}

<h2>项目子项详细列表</h2>

<p>
    @Html.ActionLink("添加新项", "Create")
</p>
<table  width="100%" class="myListTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td style="width:100px;">
                @Html.ActionLink("修改", "Edit", new { id = item.ID }) |    
            @Html.ActionLink("删除", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
<br />
@Html.ActionLink("首页", "MainPage", "Teacher")